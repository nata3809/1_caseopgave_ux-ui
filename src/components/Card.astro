---
export interface Props {}

const { img, title, time } = Astro.props;
---

<article>
  <img src={img} />
  <h4>{title}</h4>
  <p>{time}</p>
  <slot />
</article>

<style>
  .link_card {
    display: grid;
  }
  img {
    max-width: 50%;
    border-radius: 50%;
  }

  article {
    text-align: center;
  }
</style>
