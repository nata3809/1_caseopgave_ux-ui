---
export interface Props {}

const { img, title, time } = Astro.props;
---

<li class="link-card">
  <img src={img} />
  <h2>
    {title}
    <span>&rarr;</span>
  </h2>
  <p>
    {time}
  </p>
</li>

<style>
  .link_card {
    display: grid;
  }
  img {
    max-width: 40%;
    border-radius: 50%;
  }
</style>
