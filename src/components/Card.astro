---
const { festivalevent, link } = Astro.props;
---

<a href={link}>
  <article>
    <img src={"/img/" + festivalevent.image} />
  </article>
  <div class="txt">
    <h4>{festivalevent.event}</h4>
    <p>{festivalevent.time}</p>
  </div>
</a>

<style>
  article {
    text-align: center;
  }

  img {
    width: 150px;
    height: 150px;
    object-fit: cover;
    border-radius: 50%;
  }

  a {
    text-decoration: none;
  }

  .txt {
    text-align: center;
  }
</style>
